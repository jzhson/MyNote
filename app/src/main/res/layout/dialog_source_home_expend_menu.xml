<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/dialog_source_home_expend_layout_menu_layout"
            android:layout_width="200dp"
            android:layout_height="135dp"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:layout_marginTop="60dp">


            <TextView
                android:id="@+id/dialog_source_home_expend_menu_title"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:text="Please choose"
                android:gravity="center"
                android:background="@color/red"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/dialog_source_home_expend_menu_mycenter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Enter my Center"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/blue"
                android:gravity="center"
                android:layout_below="@id/dialog_source_home_expend_menu_title"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/dialog_source_home_expend_menu_loginout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="login out"
                android:textColor="@color/red"
                android:textSize="20dp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>