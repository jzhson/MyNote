<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/editnotes_div_toplayout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/editnotes_img_back"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_back"/>

        <TextView
            android:id="@+id/editnotes_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="@string/EditNotes_title"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <ImageView
            android:id="@+id/editnotes_save"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_save_48pt"
            android:layout_marginTop="5dp"
            android:layout_height="50dp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/notes_backgroud"
        android:orientation="vertical"
        android:weightSum="1">
        <TextView
            android:id="@+id/editnotes_textview_hint_title"
            android:textSize="20sp"
            android:textColor="#636363"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:text="@string/EditNotes_title_hint" />
        <EditText
            android:id="@+id/editnotes_EditText_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColorHint="#696969"
            android:textColor="#000000"
            android:maxLength="20"
            android:textSize="18dp"
            android:saveEnabled="true" />
        <TextView
            android:id="@+id/editnotes_textview_hint_content"
            android:textSize="20sp"
            android:textColor="#636363"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="@string/EditNotes_content_hint" />

        <EditText
            android:id="@+id/editnotes_EditText_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:gravity="top"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:textColor="#626366" />

    </LinearLayout>


</LinearLayout>