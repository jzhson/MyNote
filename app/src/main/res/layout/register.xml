<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroud3"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/register_layout_top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"

        android:orientation="horizontal">
    </LinearLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <deal.CircleImageView
            android:id="@+id/register_ciecleimg_def_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/icon_man_default"/>
        <TextView
            android:id="@+id/register_title"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/register_title"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textSize="30dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/register_layout_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_layout_top"
        android:layout_marginTop="90dp"
        android:layout_above="@id/register_layout_bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_layout_account"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="@string/register_texthint_username"
                android:layout_centerHorizontal="true"
                android:gravity="center">
                <EditText
                    android:id="@+id/register_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="#696969"
                    android:textColor="#FF0000"
                    android:textSize="20dp"
                    android:saveEnabled="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
            android:id="@+id/register_layout_password"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/register_layout_account"
            android:hint="@string/register_texthint_password">

            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:saveEnabled="true"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_layout_phone"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/register_layout_password"
                android:hint="@string/register_texthint_nickname">
                <EditText
                    android:id="@+id/register_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:saveEnabled="true"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/register_layout_center_layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/register_button_register"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:text="@string/register_button_register"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:background="@drawable/material_button_regist"
                android:textColor="#FFFFFF"/>
        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/register_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

    </RelativeLayout>


</RelativeLayout>