<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">


        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="440dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/material_dialog_exit"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/dialog_language_layout_top"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/sharedialog__wannring"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/share"/>
                <TextView
                    android:id="@+id/sharedialog_title"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/sharedialog__wannring"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:text="Share"
                    android:textColor="#000000"
                    android:textSize="22dp" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"
                android:layout_below="@id/dialog_language_layout_top"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:layout_below="@id/dialog_language_layout_top">

                <TextView
                    android:id="@+id/sharedialog_message"
                    android:layout_width="match_parent"
                    android:text="Scan this QR to download APKs"
                    android:gravity="center"
                    android:layout_height="40dp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/share_qr" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"
                android:layout_above="@id/dialog_language_layout_bottom"/>
            <LinearLayout
                android:id="@+id/dialog_language_layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/sharedialog_share"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="share with APPs"
                    android:textColor="@color/blue"
                    android:textSize="18dp" />
                <Button
                    android:id="@+id/sharedialog_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="cancel"
                    android:textColor="@color/blue"
                    android:textSize="18dp" />
            </LinearLayout>
        </RelativeLayout>









    </RelativeLayout>


</RelativeLayout>