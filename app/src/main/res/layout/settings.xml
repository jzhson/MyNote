<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/settings_div_toplayout"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/settings_img_back"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_back"/>

        <TextView
            android:id="@+id/settings_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="@string/settings_title"
            android:textColor="@color/black"
            android:textSize="30dp" />

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/settings_div_bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/settings_div_toplayout">


        <LinearLayout
            android:id="@+id/setting_div_language"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_language"/>
            <TextView
                android:id="@+id/setting_language"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/settings_languagechoose"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/setting_div_updates"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/setting_div_language"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_update"/>
            <TextView
                android:id="@+id/settings_checkupdate"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/settings_checkupdate"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/setting_div_updates"
            android:id="@+id/setting_div_report"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_report"/>
            <TextView
                android:id="@+id/settings_feedback"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/settings_feedback"/>

        </LinearLayout>



    </RelativeLayout>




</RelativeLayout>